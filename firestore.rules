rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Posts collection
    match /posts/{postId} {
      // Anyone can read posts
      allow read: if true;
      // Allow creating posts only for authenticated users
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Allow updating messageCount by anyone (for anonymous messages)
      // Allow other updates only by the owner
      allow update: if request.auth != null && request.auth.uid == resource.data.userId
                    || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['messageCount']));
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Messages collection
    match /messages/{messageId} {
      // Anyone can create messages (anonymous messages)
      allow create: if true;
      // Anyone can read messages (needed for server-side queries with Client SDK)
      allow read: if true;
      // Only authenticated users can update/delete messages for their posts
      allow update, delete: if request.auth != null;
    }
    
    // Users collection (if you have one)
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
